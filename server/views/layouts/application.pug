include ../mixins/forms.pug

doctype html
html(lang="en")
  head
    title Hexlet Fastify Boilerplate
    script(src=assetPath('main.js'))
    link(href=assetPath('main.css') rel="stylesheet")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
  body.d-flex.flex-column.min-vh-100
    nav.navbar.navbar-expand-md.navbar-dark.top.bg-dark
      .container-fluid
        a.navbar-brand(href=route('root'))= t('appName')
        button.navbar-toggler(data-bs-toggle="collapse" data-bs-target="#navbarToggleExternalContent")
          span.navbar-toggler-icon
        .collapse.navbar-collapse(id="navbarToggleExternalContent")
          .container-fluid.p-0
            ul.navbar-nav.mr-auto
              li.nav-item
                a.nav-link(href=route('users'))= t('layouts.application.users')
          ul.navbar-nav
            if isAuthenticated()
              li.nav-item
                +buttonTo('delete')(class="btn nav-link" value=t('layouts.application.statuses'))
              li.nav-item
                +buttonTo('delete')(class="btn nav-link" value=t('layouts.application.tags'))
              li.nav-item
                +buttonTo('delete')(class="btn nav-link" value=t('layouts.application.tasks'))
              li.nav-item
                +buttonTo(route('session'), 'delete')(class="btn nav-link 1234" value=t('layouts.application.signOut'))
            else
              li.nav-item
                a.nav-link(href=route('newSession'))= t('layouts.application.signIn')
              li.nav-item
                a.nav-link(href=route('newUser'))= t('layouts.application.signUp')
    .container.wrapper.flex-grow-1 

      each messages, type in reply.flash() || []
        each message in messages
          div.alert(class=`alert-${getAlertClass(type)}`)= message

      block content

  footer.footer
    .container
      span.text-muted Димасик)) 
        
    
